<?xml version="1.0" encoding="utf-8"?>
<widget id="aiden.calendarnative.CalendarNative" pluginWidget="true" needsEntityContext="true" offlineCapable="true"
        supportedPlatform="Native"
        xmlns="http://www.mendix.com/widget/1.0/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.mendix.com/widget/1.0/ ../node_modules/mendix/custom_widget.xsd">
    <name>Calendar Native</name>
    <description>Calendar native</description>
    <icon/>
    <properties>
        <propertyGroup caption="General">
            <propertyGroup caption="data">
                <property key="datasourceEvents" type="datasource" isList="true" required="true">
                    <caption>Data source</caption>
                    <description />
                </property>
                <property key="eventStartDate" type="attribute" dataSource="datasourceEvents" required="true">
                    <caption>Event Date</caption>
                    <description>Event Date.</description>
                    <attributeTypes>
                        <attributeType name="DateTime"/>
                    </attributeTypes>
                </property>
                <property key="eventText" type="expression" dataSource="datasourceEvents" required="false">
                    <caption>Event Text</caption>
                    <description>Text to show on swipe.</description>
                    <returnType type="String"/>
                </property>
                <property key="eventDotColor" type="expression" dataSource="datasourceEvents" required="false" defaultValue="'#0000ff'">
                    <caption>Event Dot Color</caption>
                    <description>Should be a hex color.</description>
                    <returnType type="String"/>
                </property>
            </propertyGroup>
            <propertyGroup caption="Calendar">
                <property key="viewDate" type="expression" required="false">
                    <caption>Date to show</caption>
                    <description>Date where the calendar opens on. Calendar will move to this date when it changes.</description>
                    <returnType type="DateTime"/>
                </property>
            </propertyGroup>
        </propertyGroup>
        <propertyGroup caption="Appearance">
            <property key="showWeekNumbers" type="boolean" required="true" defaultValue="false">
                <caption>Show Week Numbers</caption>
                <description></description>
            </property>
            <property key="showSixWeeks" type="boolean" required="true" defaultValue="false">
                <caption>Show Six Weeks</caption>
                <description></description>
            </property>
            <property key="enableSwipeMonths" type="boolean" required="true" defaultValue="false">
                <caption>Swipe months</caption>
                <description></description>
            </property>
            <property key="hideDayNames" type="boolean" required="true" defaultValue="false">
                <caption>Hide Day Names</caption>
                <description></description>
            </property>
            <property key="hideArrows" type="boolean" required="true" defaultValue="false">
                <caption>Hide Arrows</caption>
                <description></description>
            </property>
        </propertyGroup>
    </properties>
</widget>
